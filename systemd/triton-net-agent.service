[Unit]
Description=Triton net-agent used to manage network changes
Documentation=https://github.com/joyent/linux-live/tree/linuxcn
After=network.target

[Service]
EnvironmentFile=/usr/triton/config/systemd.env
Type=simple
# Note that TRITON_AGENT_NODE_DIR is set in the EnvironmentFile.
ExecStart=/usr/node/bin/node --abort_on_uncaught_exception ${TRITON_AGENT_NODE_DIR}/net-agent/bin/net-agent.js

[Install]
WantedBy=multi-user.target
